cluster_name: rancher

nodes:
  {% for host in groups['masters'] | default([]) -%}
  {% if host in groups['running'] -%}
  - address: {{ host }}
    user: {{ user }}
    role:
      - controlplane
      - etcd
      - worker
  {% endif %}
  {%- endfor %}
  {%- for host in groups['workers'] | default([]) -%}
  {% if host in groups['running'] -%}
  - address: {{ host }}
    user: {{ user }}
    role:
      - worker
  {% endif %}
  {%- endfor %}

network:
  plugin: weave

ingress:
  provider: nginx
